{
  "name": "survey-service",
  "version": "1.0.0",
  "description": "mern stack project for a paid email survey service",
  "main": "app.js",
  "engines": {
    "node": "12.14.1",
    "npm": "6.13.4"
  },
  "scripts": {
    "start": "node app.js",
    "server": "nodemon app.js",
